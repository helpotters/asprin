= turbo_frame_tag "edit_post_#{post.id}" do
  %li.post.mx-auto.max-w-7xl.sm:px-6.lg:px-8.bg-slate-200.rounded-lg.py-4
    .flex-col.sm:flex
      .mr-4.flex-shrink-0.flex.py-2
        = render AvatarComponent.new user: current_user, size: "8"
        .flex-col.py-0.h-8.-my-1.align-middle.items-center.gap-2.px-2
          %h2.h-3.text-md.font-bold.pb-1
            = post.user.full_name.presence || "asprin taker"
          %h4.h-3.text-sm.bg-slate-100.pt-1
            = time_ago_in_words(post.created_at)
      %div
        %p.mt-1
          = form_with(model: post, data: { turbo_frame: "edit_post_#{post.id}" }) do |form|
            = form.text_area :post_text, rows: 3, id: "post_text"
            = form.submit 'Update Post'
  .my-2
