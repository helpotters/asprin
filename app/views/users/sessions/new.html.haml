.hero.min-h-screen.bg-base-200
  .hero-content.flex-col.lg:flex-row-reverse
    .div.text-center
      %h1{:class => "text-[40px] text-[#f2baa9]"} asprin
      %p.text-xl.text-white
        A modern take on old-tech
    .card.flex-shrink-0.w-full.max-w-sm.shadow-4xl.border-2
      .card-body.gap-4.justify-center.align-center.text-center
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-control.gap-2.py-2.px-4
            = f.input :email,
              label: false,
              wrapper_html: { class: "input input-bordered" },
              required: false,
              placeholder: "Email",
              autofocus: true,
              input_html: { autocomplete: "me@example.com" }
          .form-control.gap-2.py-2.px-4
            = f.input :password,
              label: false,
              wrapper_html: { class: "input input-bordered" },
              required: false,
              placeholder: "Password",
              input_html: { autocomplete: "current-password" }
          .form-control.gap-2.py-2.px-4
            = f.button :submit, "Log in", class: "btn"
          .form-control.gap-2.py-2.px-4
            %label.label
              %span.label-text Remember me
              = f.check_box :remember_me, class: "checkbox", type: "checkbox", label: false, as: :boolean if devise_mapping.rememberable?
