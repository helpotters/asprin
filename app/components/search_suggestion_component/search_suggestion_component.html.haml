%turbo-frame#suggestions{ data: { "search-target": "suggestions", action: "mousedown->search#childClicked" } }
  - if @results.any?
    %turbo-frame#suggestion.absolute.w-full.overflow-y-auto.max-h-60.bg-white.rounded-lg.shadow-lg.z-10
      %ul
        - @results.each do |user|
          %li
            %a.p-4.flex.flex-row.border-b.border-gray-300.hover:bg-gray-100{ href: show_profile_path(user.id) }
              .h-6
                = render AvatarComponent.new src: user.image, alt: user.full_name
              .p-2
                = user.full_name
